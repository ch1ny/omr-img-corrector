{
	"build": {
		"beforeDevCommand": "yarn dev",
		"beforeBuildCommand": "yarn build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "omr-corrector",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"dialog": {
				"all": false,
				"ask": false,
				"confirm": false,
				"message": false,
				"open": true,
				"save": false
			},
			"fs": {
				"all": true,
				"scope": ["**"]
			},
			"path": {
				"all": true
			},
			"shell": {
				"all": false,
				"open": true
			},
			"window": {
				"all": true
			}
		},
		"bundle": {
			"active": false,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "sdu.HanshinKira.OmrImgCorrector",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": ["./resources/*"],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"width": 500,
				"height": 375,
				"resizable": false,
				"title": "Loading App...",
				"center": true,
				"visible": false,
				"label": "splash",
				"url": "views/splash.html",
				"alwaysOnTop": true,
				"decorations": false,
				"transparent": true,
				"skipTaskbar": true
			},
			{
				"fullscreen": false,
				"width": 1000,
				"height": 650,
				"resizable": true,
				"title": "omr-img-corrector",
				"center": true,
				"visible": false,
				"label": "main",
				"url": "views/main.html"
			},
			{
				"fullscreen": false,
				"width": 500,
				"height": 600,
				"resizable": false,
				"title": "settings",
				"center": true,
				"visible": false,
				"label": "settings",
				"url": "views/options.html"
			},
			{
				"fullscreen": false,
				"width": 800,
				"height": 600,
				"resizable": true,
				"title": "Test",
				"center": true,
				"visible": false,
				"label": "test",
				"url": "views/test.html"
			}
		]
	}
}
